<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace命名空间对应要映射的dao接口的全限定名 -->
<mapper namespace="com.cheney.dao.mybatis.AdminMapper">

    <resultMap id="base" type="com.cheney.entity.dto.Admin">
        <id property="id" column="id"/>
        <result property="createDate" column="createDate"/>
        <result property="username" column="username"/>
    </resultMap>

    <sql id="filters">
        <where>
            <foreach collection="filters" item="filter" separator="and">
                <if test="filter.symbol != 'is null' and filter.symbol != 'is not null' and filter.symbol != 'in'">
                    ${filter.property} ${filter.symbol} #{filter.value}
                </if>
                <if test="filter.symbol == 'is null' or filter.symbol == 'is not null'">
                    ${filter.property} ${filter.symbol}
                </if>
                <if test="filter.symbol == 'in'">
                    ${filter.property}
                    in
                    <foreach collection="filter.value" item="item" separator="," open="(" close=")">
                        #{item}
                    </foreach>
                </if>
            </foreach>
        </where>
    </sql>

    <sql id="pageFilters">
        <where>
            rownum <![CDATA[<]]> ${pageable.endSize} and
            <foreach collection="pageable.filters" item="filter" separator="and">
                <if test="filter.symbol != 'is null' and filter.symbol != 'is not null' and filter.symbol != 'in'">
                    ${filter.property} ${filter.symbol} #{filter.value}
                </if>
                <if test="filter.symbol == 'is null' or filter.symbol == 'is not null'">
                    ${filter.property} ${filter.symbol}
                </if>
                <if test="filter.symbol == 'in'">
                    ${filter.property}
                    in
                    <foreach collection="filter.value" item="item" separator="," open="(" close=")">
                        #{item}
                    </foreach>
                </if>
            </foreach>
        </where>
    </sql>

    <sql id="orders">
      <if test="order != null">
          order by
          <foreach collection="order.properties" separator="," item="property">
              ${property}
          </foreach>
          ${order.type}
      </if>
    </sql>

    <sql id="pageOrders">
        <if test="pageable.order != null">
            order by
            <foreach collection="pageable.order.properties" separator="," item="property">
                ${property}
            </foreach>
            ${pageable.order.type}
        </if>
    </sql>

    <resultMap id="page" type="com.cheney.system.page.Page">
        <result property="total" column="count"/>
        <result property="pageSize" column="pageSize"/>
        <result property="pageNumber" column="pageNumber"/>
        <collection property="content" ofType="com.cheney.entity.dto.Admin" >
            <id property="id" column="id"/>
        <result property="createDate" column="createDate"/>
        <result property="username" column="username"/>
        </collection>
    </resultMap>

    <select id="findById" parameterType="Long" resultType="com.cheney.entity.dto.Admin">
        select *
        from m_admin
        where id = #{id}
    </select>

    <select id="findAll" resultType="com.cheney.entity.dto.Admin">
        select *
        from m_admin
    </select>

    <insert id="persist" parameterType="com.cheney.entity.dto.Admin">
        insert into m_admin (createDate,username)
        values(#{createDate},#{username})
    </insert>

    <update id="merge" parameterType="com.cheney.entity.dto.Admin">
        update auth_user
        set createDate = #{createDate},username = #{username}
        where id = #{id}
    </update>

    <delete id="remove" parameterType="Long">
        delete from m_admin where id = #{id}
    </delete>

    <delete id="multiRemove" parameterType="Long">
        delete from m_admin
        where id in
        <foreach item="id" collection="ids" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="findPage" parameterType="com.cheney.system.page.Pageable" resultMap="page">
        select * from(
            select
            rownum as row
            #{pageable.pageSize} as pageSize
            ,#{pageable.pageNumber} as pageNumber
            ,(select count(*) from m_admin<include refid="pageFilters"/>) as count
            ,t1.*
            from m_admin t1
            <include refid="pageFilters"/>
            <include refid="pageOrders"/>
        )
        where row <![CDATA[>]]>  #{pageable.startSize}
    </select>

    <select id="findList" resultType="com.cheney.entity.dto.Admin">
        select *
        from m_admin
        <include refid="filters"/>
        <include refid="orders"/>
    </select>

</mapper>
