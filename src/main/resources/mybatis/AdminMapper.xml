<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace命名空间对应要映射的dao接口的全限定名 -->
<mapper namespace="com.cheney.dao.mybatis.AdminMapper">

    <sql id="filters">
        <where>
            <foreach collection="filters" item="filter" separator=",">
                <if test="filter.symbol != 'is null' and filter.symbol != 'is not null' and filter.symbol != 'in'">
                    and ${filter.property} ${filter.symbol} #{filter.value}
                </if>
                <if test="filter.symbol == 'is null' or filter.symbol == 'is not null'">
                    and ${filter.property} ${filter.symbol}
                </if>
                <if test="filter.symbol == 'in'">
                    ${filter.property}
                    in
                    <foreach collection="filter.value" item="item" separator="," open="(" close=")">
                        #{item}
                    </foreach>
                </if>
            </foreach>
        </where>
    </sql>

    <sql id="pageFilters">
        <where>
            <foreach collection="pageable.filters" item="filter" separator=",">
                <if test="filter.symbol != 'is null' and filter.symbol != 'is not null' and filter.symbol != 'in'">
                    and ${filter.property} ${filter.symbol} #{filter.value}
                </if>
                <if test="filter.symbol == 'is null' or filter.symbol == 'is not null'">
                    and ${filter.property} ${filter.symbol}
                </if>
                <if test="filter.symbol == 'in'">
                    ${filter.property}
                    in
                    <foreach collection="filter.value" item="item" separator="," open="(" close=")">
                        #{item}
                    </foreach>
                </if>
            </foreach>
        </where>
    </sql>

    <resultMap id="page" type="com.cheney.system.page.Page">
        <result property="count" column="count"/>
        <collection property="content" ofType="com.cheney.entity.dto.Admin" >
            <id property="id" column="id" />
        </collection>
    </resultMap>

    <select id="findById" parameterType="long" resultType="com.cheney.entity.dto.Admin">
        select *
        from m_admin
        where id = #{id}
    </select>

    <select id="findAll" resultType="com.cheney.entity.dto.Admin">
        select *
        from m_admin
    </select>

    <insert id="persist" parameterType="com.cheney.entity.dto.Admin">
        insert into m_admin (create_date,username)
        values(#{createDate},#{username})
    </insert>

    <update id="merge" parameterType="com.cheney.entity.dto.Admin">
        update auth_user
        set create_date = #{createDate},username = #{username}
        where id = #{id}
    </update>

    <delete id="remove" parameterType="long">
        delete from m_admin where id = #{id}
    </delete>

    <delete id="multiRemove" parameterType="long">
        delete from m_admin
        where id in
        <foreach item="id" collection="ids" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="findPage" parameterType="com.cheney.system.page.Pageable" resultMap="page">
        select (select count(*) from m_admin <include refid="pageFilters"/>) as count
        ,t1.*
        from m_admin t1
        <include refid="pageFilters"/>
        limit #{pageable.startSize},#{pageable.pageSize}
    </select>

    <select id="findList" resultType="com.cheney.entity.dto.Admin">
        select *
        from m_admin
        <include refid="filters"/>
    </select>

</mapper>
