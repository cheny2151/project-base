<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace命名空间对应要映射的dao接口的全限定名 -->
<mapper namespace="com.cheney.dao.mybatis.UserMapper">

    <select id="find" parameterType="long" resultType="com.cheney.entity.dto.AuthUser">
        select *
        from auth_user
        where id = #{id}
    </select>

    <select id="findAll" resultType="com.cheney.entity.dto.AuthUser">
        select *
        from auth_user
    </select>

    <insert id="persist" parameterType="com.cheney.entity.dto.AuthUser">
        insert into auth_user(createDate,username,password,enabled,originId)
        values(#{createDate},#{username},#{password},#{enabled},#{originId})
    </insert>

    <update id="merge" parameterType="com.cheney.entity.dto.AuthUser">
        update auth_user
        set createDate = #{createDate},username = #{username},password = #{password}
            ,enabled = #{enabled},originId = #{originId}
        where id = #{id}
    </update>

    <delete id="remove" parameterType="long">
        delete from auth_user where id = #{id}
    </delete>

    <delete id="multiRemove" parameterType="long">
        delete from auth_user
        where id in
        <foreach item="id" collection="ids" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="findByUsername" parameterType="string" resultType="com.cheney.entity.dto.AuthUser">
        select *
        from auth_user
        where username=#{username}
    </select>

</mapper>