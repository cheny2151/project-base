<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace命名空间对应要映射的dao接口的全限定名 -->
<mapper namespace="com.cheney.dao.UserMapper">

    <select id="find" parameterType="@{idType}" resultType="@{package}">
        select *
        from @{tableName}
        where @{idCloumn} = #{id}
    </select>

    <select id="findAll" resultType="@{package}">
        select *
        from @{tableName}
    </select>

    <insert id="persist" parameterType="@{package}">
        insert into @{tableName}(@{cloumns})
        values(@{cloumnValues})
    </insert>

    <update id="merge" parameterType="@{package}">
        update auth_user
        set @{setValue}
        where @{idCloumn} = #{id}
    </update>

    <delete id="remove" parameterType="@{idType}">
        delete from @{tableName} where @{idCloumn} = #{id}
    </delete>

    <delete id="multiRemove" parameterType="@{idType}">
        delete from @{tableName}
        where @{idCloumn} in
        <foreach item="id" collection="ids" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>